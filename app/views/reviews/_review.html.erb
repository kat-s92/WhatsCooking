<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [recipe, review] do |f| %>
        <%= f.input :comment %>


        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>


       <!-- <%= f.input :rating %> -->
        <%= f.submit "Submit", class:"secondary-btn" %>
      <% end %>
    </div>
  </div>
</div>
